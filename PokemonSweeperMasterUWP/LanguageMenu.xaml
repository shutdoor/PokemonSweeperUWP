<Page
    x:Class="PokemonSweeperMasterUWP.LanguageMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PokemonSweeperMasterUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ComboBox x:Name="LanguageSelector" Margin="0,326,0,0" Width="294" Height="79" HorizontalAlignment="Center" SelectionChanged="LanguageSelector_SelectionChanged">
            <x:String>English</x:String>
            <x:String>German</x:String>
        </ComboBox>
        <Button x:Uid="SaveChangesButton" Name="SaveChangesButton" Margin="0,500,0,0" VerticalAlignment="Top" Height="82" Width="154" HorizontalAlignment="Center" Click="SaveChangesButton_Click"/>
        <TextBlock x:Uid="LanguageSelection" HorizontalAlignment="Center" FontSize="100px" TextWrapping="Wrap" VerticalAlignment="Top" Height="172" Width="920"/>

    </Grid>
</Page>
