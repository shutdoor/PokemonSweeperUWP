<Page x:Class="PokemonSweeper.Game.Messages.FailMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="183" Width="434">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="75"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75"></ColumnDefinition>
            <ColumnDefinition Width="300"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" Grid.Row="0" Name="EscapedPokemon" Source="/Game/images/pokemon/001.png" HorizontalAlignment="Center" VerticalAlignment="Center"></Image>
        <TextBlock Name="Message" TextWrapping="Wrap" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <Button Name="retry" Grid.Column="1" Grid.Row="1" Width="75" VerticalAlignment="Stretch"  HorizontalAlignment="Right" Click="retry_Click">Retry >></Button>
    </Grid>
</Page>
