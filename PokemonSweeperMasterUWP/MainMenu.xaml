<Page
    x:Class="PokemonSweeperMasterUWP.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PokemonSweeperMasterUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="1" Name="StartButton" Content="Start" VerticalAlignment="Center" Height="108" Width="203" HorizontalAlignment="Center" Click="StartButton_Click" />
        <Button Grid.Row="3" Name="QuitButton" Content="Quit" VerticalAlignment="Center" Height="108" Width="203" HorizontalAlignment="Center" Click="QuitButton_Click"/>
        <Button Grid.Row="2" Name="LanguageButton" Content="Languages" VerticalAlignment="Center" Height="108" Width="203" HorizontalAlignment="Center" Click="LanguageButton_Click"/>
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" Text="PokemonSweeper" FontSize="100px" TextWrapping="Wrap" VerticalAlignment="Center"/>

    </Grid>
</Page>
